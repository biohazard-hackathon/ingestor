{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 20",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "declaration": true,
    "composite": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "incremental": true,
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./"
  },
  "exclude": [
    "release",
    "tests"
  ],
}
